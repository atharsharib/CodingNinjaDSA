//Given a large number represented in the form of a linked list. Write code to increment the number by 1 in-place(i.e. without using extra space)



int carry(Node* head){
   if(head->next==NULL){
       int sum=head->data+1;
       head->data=sum%10;
       return sum/10;
   }
   int a=carry(head->next);
   int sum=head->data+a;
   head->data=sum%10;
   return sum/10; 
}

Node* NextLargeNumber(Node *head) {
    int x=carry(head);
    if(x){
        head->data=0;
        Node*y=new Node(1);
        y->next=head;
        return y;
    }
    return head;
}

